@model PortalVisitantes.Presentation.Models.CatalogoViewModel

@{
    ViewData["Title"] = "Nuevo Item de catalogo";
}

<div class="container">
    <h1 class="text-center mb-4">Nuevo Item del Catalogo</h1>
    <div class="mb-3">
        <a asp-action="Index" asp-controller="Visitante" class="btn btn-outline-primary">Regresar</a>
    </div>

    <form asp-action="Crear" asp-controller="Catalogo" method="post" class="card p-3 mb-5 bg-white rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-body">
            <div class="mb-3">
                <label for="Nombre" class="form-label">Nombre de item</label>
                <input type="tel" class="form-control" id="Nombre" asp-for="Nombre" required>
            </div>

            <div class="mb-3">
                <label for="Url" class="form-label">Link del item</label>
                <input type="url" class="form-control" id="Url" asp-for="Url" required>
            </div>
            <button type="submit" class="btn btn-success">Guardar cambios</button>
        </div>
    </form>
</div>